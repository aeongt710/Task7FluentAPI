@model IList<Task7FluentAPI.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Order Name
            </th>
            <th>
                Net Total
            </th>
            <th>
                Manage Items
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderName)
                </td>
                <td>
                    @(item.OrderItem.Select(a=>a.Quanity*a.Item.Price).Sum())
                </td>
                <td>
                    <a asp-action="OrderItems" asp-route-id="@item.Id">Manage Items</a> ( @(item.OrderItem.Select(a=>a.Quanity).Sum()) )
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
