@model Task7FluentAPI.Models.VMs.ItemIndexVM

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

<br />
<div class="row justify-content-center mr-5">


    <form asp-action="Index" class=" row ">
        <label class="control-label  mt-1 col-md-2 pr-3">EnterName</label>
        <input asp-for="Name" class="form-control col-md-3 mr-3" />
        <label class="control-label col-md-2 mt-1 pr-3">SelectUnit</label>
        <select asp-for="UnitId" class="form-control col-md-2 mr-2" asp-items="Model.UnitSelectList">
            <option value="0">Select</option>
        </select>
        <input type="submit" value="Search" class="btn-primary col-md-2 btn " />
    </form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @if (item.Quantity == 0)
                    {
                        <td class="font-weight-bold text-danger">
                            Out Of Stock
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit.UnitName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
