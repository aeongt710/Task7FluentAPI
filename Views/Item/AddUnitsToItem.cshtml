@model Task7FluentAPI.Models.VMs.ItemUnitVM
@{
    ViewData["Title"] = "AddUnitsToItem";
}

<h1>Add Unit To Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUnitsToItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" class="control-label"/>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" class="form-control" asp-items="Model.UnitSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
