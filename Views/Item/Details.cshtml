@model Task7FluentAPI.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>
</div>
<hr/>
<h4>Current Units</h4>
<table class="table col-3">
    <thead>
        <tr>

            <th>
                Unit
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
            foreach (var item in Model.ItemUnit)
            {
                <tr>

                    <td> @Html.DisplayFor(modelItem => item.Unit.UnitName) </td>

                </tr>
            }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
